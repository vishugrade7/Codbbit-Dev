rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read any file. This is useful for public profiles.
    match /{allPaths=**} {
      allow read;
    }

    // Allow a user to write ONLY to their own profile picture path.
    // The path must match 'profile-pictures/<user-id>'.
    // The uploaded file size must be less than 5MB.
    match /profile-pictures/{userId} {
      allow write: if request.auth != null &&
                    request.auth.uid == userId &&
                    request.resource.size < 5 * 1024 * 1024;
    }
  }
}
