rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files, so profile pictures can be viewed.
    match /{allPaths=**} {
      allow read;
    }

    // Allow an authenticated user to write ONLY to their own profile picture path.
    // e.g., /profile-pictures/user123.jpg
    match /profile-pictures/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
