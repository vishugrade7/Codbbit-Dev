
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read and write to the problems collection.
    // This is required for the admin problem upload feature (a server action) to work.
    match /problems/{document=**} {
      allow read, write: if true;
    }

    // Allow public read and write to the users collection.
    // This is required for server actions (like submitting solutions) to update user points
    // and for client-side actions like signup.
    match /users/{userId} {
      allow read, write: if true;
    }

    // Allow anyone to read problem sheets, but only authenticated users
    // can create, edit, or subscribe to them.
    match /problem-sheets/{sheetId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // A catch-all rule to prevent unintended writes to other collections.
    match /{path=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
