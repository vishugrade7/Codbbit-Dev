rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read any profile, but only write to their own.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Problems are publicly readable. Writing is restricted to admins.
    match /problems/{doc=**} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Courses are publicly readable. Writing is restricted to admins.
    match /courses/{doc=**} {
      allow read: if true;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Problem sheets are publicly readable.
    match /problem-sheets/{sheetId} {
      allow read: if true;
      // Authenticated users can create sheets.
      allow create: if request.auth != null;
      // Users can update a sheet to subscribe/unsubscribe, and creators can edit.
      allow update: if request.auth != null;
      // For now, nobody can delete sheets from the client.
      allow delete: if false;
    }
    
    // Settings can be written to by admins.
    match /settings/{docId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Badges can be written to by admins.
    match /badges/{badgeId} {
        allow read: if true;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
