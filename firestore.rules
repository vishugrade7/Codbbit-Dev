rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Problems and problem sheets can be read by anyone
    match /problems/{docId} {
      allow read: if true;
      allow write: if false; // Disallow client-side writes for security
    }

    match /problem-sheets/{sheetId} {
      allow read: if true;
      allow create, update: if request.auth != null; // Allow authenticated users to create/update sheets
    }

    // User profiles can be read by anyone, but only the
    // authenticated user can create or update their own document.
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
