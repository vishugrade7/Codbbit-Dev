
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is an admin
    function isAdmin() {
      // Check for a specific hardcoded admin email OR if the user has the isAdmin flag in their document
      return request.auth.token.email == 'gradevishu@gmail.com' ||
             (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }

    // Rules for categories and their sub-collection of problems
    match /categories/{categoryId} {
      allow read: if true;
      // Admins can create, update, and delete categories and their problems
      allow write: if isAdmin();

      match /problems/{problemId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // Rules for the users collection
    match /users/{userId} {
      // Allow anyone to read user profiles for leaderboards, public profiles etc.
      allow read: if true;
      // Allow a user to create their own document upon signup
      allow create: if request.auth.uid == userId;
      // Allow a user to update their own document, or an admin to update any user document
      allow update: if request.auth.uid == userId || isAdmin();
      // Only admins can delete user documents
      allow delete: if isAdmin();
    }
  }
}
