rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin status
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  
    // Users can read any profile, but only write to their own
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // Problems and Courses are publicly readable, but only admins can write
    match /problems/{doc=**} {
      allow read: if true;
      allow write: if false; 
    }
    
    match /courses/{doc=**} {
      allow read: if true;
      allow write: if false;
    }

    // Problem sheets are public, can be created by any auth user, updated by any auth user, but not deleted from client
    match /problem-sheets/{sheetId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // Settings are public, only admins can write
    match /settings/{docId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Badges are public, only admins can write
    match /badges/{badgeId} {
        allow read: if true;
        allow write: if false;
    }
  }
}
