rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read their own data and update specific fields.
    // Public profile data is readable by anyone.
    match /users/{userId} {
      allow read;
      allow write: if request.auth.uid == userId;
    }

    // Problems are readable by everyone, but only writable by admins.
    match /problems/{docId} {
      allow read;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Courses are readable by everyone, but only writable by admins.
    match /courses/{courseId} {
      allow read;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Sheets can be read by anyone, created by authenticated users, 
    // and updated only by the creator.
    match /problem-sheets/{sheetId} {
      allow read;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == resource.data.createdBy;
    }

    // Badges are readable by everyone, but only writable by admins.
    match /badges/{badgeId} {
      allow read;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // General settings are readable by everyone, but only writable by admins.
    match /settings/{settingId} {
      allow read;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
