
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read/write to problems and users for simplicity during development.
    // In a production app, you'd want more granular security.
    match /problems/{document=**} {
      allow read, write: if true;
    }

    match /users/{document=**} {
      allow read, write: if true;
    }

    // Salesforce Data: Allow authenticated users to access this data
    match /salesforceData/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Catch-all: Deny writes, allow reads to anything else not matched
    match /{path=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
